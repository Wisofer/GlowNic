@using GlowNic.Models.DTOs.Responses
@{
    ViewData["Title"] = "Gesti√≥n de Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var employees = ViewBag.Employees as List<EmployeeDto> ?? new List<EmployeeDto>();
    var barbers = ViewBag.Barbers as List<BarberDto> ?? new List<BarberDto>();
}

<div class="container mx-auto p-3 sm:p-4 max-w-7xl">
    <!-- Header Compacto -->
    <div class="mb-4">
        <h1 class="text-xl sm:text-2xl font-bold text-pink mb-1">üë• Gesti√≥n de Empleados</h1>
        <p class="text-xs text-gray-400">Administra todos los especialistas</p>
    </div>

    <!-- Estad√≠sticas R√°pidas Compactas -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-2 mb-4">
        <div class="bg-gradient-to-br from-pink-50 to-purple-50 dark:from-pink-900/20 dark:to-purple-900/20 rounded-xl p-3 border border-pink/20 shadow-sm">
            <div class="text-xs text-gray-500 mb-1">üë• Total Empleados</div>
            <div class="text-xl font-bold text-pink">@employees.Count</div>
        </div>
        <div class="bg-gradient-to-br from-pink-50 to-purple-50 dark:from-pink-900/20 dark:to-purple-900/20 rounded-xl p-3 border border-pink/20 shadow-sm">
            <div class="text-xs text-gray-500 mb-1">‚úÖ Activos</div>
            <div class="text-xl font-bold text-success">@employees.Count(e => e.IsActive)</div>
        </div>
        <div class="bg-gradient-to-br from-pink-50 to-purple-50 dark:from-pink-900/20 dark:to-purple-900/20 rounded-xl p-3 border border-pink/20 shadow-sm">
            <div class="text-xs text-gray-500 mb-1">‚è∏Ô∏è Inactivos</div>
            <div class="text-xl font-bold text-error">@employees.Count(e => !e.IsActive)</div>
        </div>
        <div class="bg-base-200 rounded-lg p-4 border border-base-300">
            <div class="text-xs text-gray-500 mb-1">Salones con Empleados</div>
            <div class="text-2xl font-bold text-pink">@employees.Select(e => e.OwnerBarberId).Distinct().Count()</div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="mb-4 flex gap-2 flex-wrap">
        <input type="text" id="searchEmployees" placeholder="Buscar por nombre o email..." 
               class="input input-bordered flex-1 min-w-[200px]">
        <select id="filterBarber" class="select select-bordered">
            <option value="">Todos los sal√≥ns</option>
            @foreach (var barber in barbers)
            {
                <option value="@barber.Id">@barber.Name</option>
            }
        </select>
        <select id="filterStatus" class="select select-bordered">
            <option value="">Todos los estados</option>
            <option value="active">Solo activos</option>
            <option value="inactive">Solo inactivos</option>
        </select>
    </div>

    <!-- Botones de Exportaci√≥n -->
    <div class="mb-4 flex gap-2 justify-end">
        <button id="btnExportExcel" class="btn btn-sm btn-success gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Exportar Excel
        </button>
        <button id="btnExportPDF" class="btn btn-sm btn-error gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
            Exportar PDF
        </button>
    </div>

    <!-- Tabla de Empleados -->
    <div class="bg-base-100 rounded-lg border border-base-300 shadow-sm">
        <div class="overflow-x-auto">
            <table id="employeesTable" class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-xs">Nombre</th>
                        <th class="text-xs">Email</th>
                        <th class="text-xs">Tel√©fono</th>
                        <th class="text-xs">Sal√≥n Due√±o</th>
                        <th class="text-xs text-center">Estado</th>
                        <th class="text-xs">Fecha Registro</th>
                        <th class="text-xs text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody id="employeesTableBody">
                    @foreach (var employee in employees)
                    {
                        <tr data-employee-id="@employee.Id" data-name="@employee.Name.ToLower()" data-email="@employee.Email.ToLower()" data-barber-id="@employee.OwnerBarberId" data-status="@(employee.IsActive ? "active" : "inactive")">
                            <td class="text-sm font-medium">@employee.Name</td>
                            <td class="text-xs text-gray-500">@employee.Email</td>
                            <td class="text-xs">@(employee.Phone ?? "-")</td>
                            <td class="text-xs">@employee.OwnerBarberName</td>
                            <td class="text-center">
                                @if (employee.IsActive)
                                {
                                    <span class="badge badge-success badge-xs">Activo</span>
                                }
                                else
                                {
                                    <span class="badge badge-error badge-xs">Inactivo</span>
                                }
                            </td>
                            <td class="text-xs text-gray-500">@employee.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <div class="flex gap-1 justify-center">
                                    <button data-action="view" data-employee-id="@employee.Id" data-barber-id="@employee.OwnerBarberId"
                                            class="btn btn-xs btn-primary" title="Ver Detalles">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/admin/employees-management.js"></script>

