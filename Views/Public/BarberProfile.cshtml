@using GlowNic.Models.DTOs.Responses
@{
    ViewData["Title"] = "Agendar Cita";
    Layout = null;
    var barber = ViewBag.Barber as BarberPublicDto;
    var slug = ViewBag.Slug as string;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(barber?.Name ?? "Sal√≥n") - Agendar Cita | GlowNic</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #fce7f3 0%, #fdf2f8 50%, #fce7f3 100%);
            color: #333;
            line-height: 1.6;
        }
        
        .container {
            max-width: 480px;
            margin: 0 auto;
            background: white;
            min-height: 100vh;
        }
        
        /* Header */
        .header {
            background: linear-gradient(135deg, #ec4899 0%, #c026d3 50%, #d946ef 100%);
            color: white;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 16px;
            box-shadow: 0 4px 20px rgba(236, 72, 153, 0.3);
        }
        
        .header-logo {
            width: 70px;
            height: 70px;
            flex-shrink: 0;
            background: white;
            border-radius: 12px;
            padding: 6px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .header-logo img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            border-radius: 6px;
        }
        
        .header-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 6px;
            min-width: 0;
        }
        
        .barber-name {
            font-size: 20px;
            font-weight: 700;
            letter-spacing: 0.3px;
            margin: 0;
            line-height: 1.2;
        }
        
        .barber-business {
            font-size: 14px;
            opacity: 0.95;
            font-weight: 500;
            margin: 0;
            line-height: 1.3;
        }
        
        .barber-phone {
            font-size: 14px;
            opacity: 0.95;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            margin-top: 2px;
        }
        
        .barber-phone i {
            font-size: 16px;
            color: #ec4899;
            background: white;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        /* Selector de Fecha */
        .date-section {
            background: white;
            padding: 20px;
            border-bottom: 1px solid #e5e5e5;
        }
        
        .date-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 16px;
            color: #333;
        }
        
        .date-selector {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 8px;
        }
        
        .date-option {
            background: #f8f9fa;
            border: 2px solid #e5e5e5;
            border-radius: 12px;
            padding: 12px 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .date-option:hover {
            border-color: #ec4899;
        }
        
        .date-option.selected {
            background: #ec4899;
            border-color: #ec4899;
            color: white;
        }
        
        .date-day {
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 4px;
        }
        
        .date-number {
            font-size: 20px;
            font-weight: 700;
        }
        
        .date-month {
            font-size: 10px;
            margin-top: 2px;
            opacity: 0.8;
        }
        
        /* Horarios Disponibles */
        .time-section {
            padding: 20px;
            border-bottom: 1px solid #e5e5e5;
        }
        
        .section-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 16px;
            color: #333;
        }
        
        .time-slots {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }
        
        .time-slot {
            background: #f8f9fa;
            border: 2px solid #e5e5e5;
            border-radius: 12px;
            padding: 14px 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s ease;
            font-weight: 600;
            font-size: 14px;
            color: #495057;
        }
        
        .time-slot:hover {
            border-color: #ec4899;
            background: #fdf2f8;
        }
        
        .time-slot.selected {
            background: #ec4899;
            color: white;
            border-color: #ec4899;
        }
        
        .time-slot:disabled {
            opacity: 0.4;
            cursor: not-allowed;
        }
        
        /* Formulario */
        .form-section {
            padding: 20px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
            color: #333;
        }
        
        .form-label .optional {
            font-weight: 400;
            color: #6c757d;
            font-size: 12px;
        }
        
        .input-wrapper {
            position: relative;
        }
        
        .input-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #ec4899;
            font-size: 18px;
        }
        
        .form-input {
            width: 100%;
            padding: 14px 16px 14px 50px;
            border: 2px solid #e5e5e5;
            border-radius: 12px;
            font-size: 16px;
            transition: all 0.2s ease;
            background: #f8f9fa;
        }
        
        .form-input:focus {
            outline: none;
            border-color: #ec4899;
            background: white;
        }
        
        .form-help {
            font-size: 12px;
            color: #6c757d;
            margin-top: 6px;
            display: flex;
            align-items: center;
            gap: 6px;
        }
        
        .whatsapp-icon {
            color: #ec4899;
        }
        
        .btn-submit {
            width: 100%;
            padding: 16px;
            background: #ec4899;
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 10px;
        }
        
        .btn-submit:hover:not(:disabled) {
            background: #c026d3;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(236, 72, 153, 0.3);
        }
        
        .btn-submit:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        /* Loading */
        .loading {
            text-align: center;
            padding: 40px 20px;
            color: #6c757d;
        }
        
        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #ec4899;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 16px;
        }
        
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        /* Error */
        .error-box {
            background: #fee;
            border: 2px solid #fcc;
            border-radius: 12px;
            padding: 16px;
            color: #c33;
            text-align: center;
            margin-top: 16px;
        }
        
        .no-availability {
            text-align: center;
            padding: 40px 20px;
            color: #6c757d;
            width: 100%;
            max-width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            grid-column: 1 / -1;
        }
        
        .no-availability-title {
            font-size: 18px;
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
            text-align: center;
            width: 100%;
        }
        
        .no-availability-message {
            font-size: 14px;
            color: #6c757d;
            line-height: 1.5;
            text-align: center;
            width: 100%;
        }
        
        /* Info Cards */
        .info-section {
            padding: 20px;
            border-bottom: 1px solid #e5e5e5;
        }
        
        .info-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 0;
            border-bottom: 1px solid #f1f3f5;
        }
        
        .info-item:last-child {
            border-bottom: none;
        }
        
        .info-icon {
            width: 36px;
            height: 36px;
            border-radius: 10px;
            background: #f0fdf4;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ec4899;
            font-size: 16px;
        }
        
        .info-text {
            flex: 1;
        }
        
        .info-label {
            font-size: 12px;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 2px;
        }
        
        .info-value {
            font-weight: 600;
            color: #333;
        }
        
        /* Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .modal.show {
            display: flex;
        }
        
        .modal-content {
            background: white;
            border-radius: 20px;
            padding: 30px;
            max-width: 400px;
            width: 100%;
            text-align: center;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }
        
        .modal-icon {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 35px;
        }
        
        .modal-icon.success {
            background: #d4edda;
            color: #28a745;
        }
        
        .modal-icon.error {
            background: #f8d7da;
            color: #dc3545;
        }
        
        .modal-title {
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 12px;
            color: #333;
        }
        
        .modal-message {
            color: #6c757d;
            margin-bottom: 24px;
        }
        
        /* Select */
        .form-select {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e5e5e5;
            border-radius: 12px;
            font-size: 16px;
            background: #f8f9fa;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .form-select:focus {
            outline: none;
            border-color: #ec4899;
            background: white;
        }
        
        /* Service Cards */
        .services-search {
            margin-bottom: 12px;
        }
        
        .services-search-input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e5e5e5;
            border-radius: 12px;
            font-size: 14px;
            background: #f8f9fa;
            transition: all 0.2s ease;
        }
        
        .services-search-input:focus {
            outline: none;
            border-color: #ec4899;
            background: white;
        }
        
        .services-search-input::placeholder {
            color: #9ca3af;
        }
        
        .services-container {
            display: flex;
            flex-direction: column;
            gap: 12px;
            margin-bottom: 8px;
            max-height: 300px;
            overflow-y: auto;
            overflow-x: hidden;
            padding-right: 4px;
        }
        
        /* Scrollbar personalizado para servicios */
        .services-container::-webkit-scrollbar {
            width: 6px;
        }
        
        .services-container::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }
        
        .services-container::-webkit-scrollbar-thumb {
            background: #ec4899;
            border-radius: 10px;
        }
        
        .services-container::-webkit-scrollbar-thumb:hover {
            background: #1da851;
        }
        
        .service-card {
            display: flex;
            align-items: center;
            padding: 14px 16px;
            border: 2px solid #e5e5e5;
            border-radius: 12px;
            background: #f8f9fa;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .service-card:hover {
            border-color: #ec4899;
            background: #f0fdf4;
        }
        
        .service-card.selected {
            border-color: #ec4899;
            background: #f0fdf4;
        }
        
        .service-checkbox {
            width: 20px;
            height: 20px;
            margin-right: 12px;
            cursor: pointer;
            accent-color: #ec4899;
        }
        
        .service-info {
            flex: 1;
        }
        
        .service-name {
            font-weight: 600;
            color: #333;
            margin-bottom: 4px;
            font-size: 15px;
        }
        
        .service-details {
            font-size: 13px;
            color: #6c757d;
            display: flex;
            gap: 12px;
        }
        
        .service-price {
            color: #ec4899;
            font-weight: 600;
        }
        
        .service-total {
            margin-top: 16px;
            padding: 14px 16px;
            background: #f0fdf4;
            border: 2px solid #ec4899;
            border-radius: 12px;
            text-align: center;
        }
        
        .service-total-label {
            font-size: 13px;
            color: #6c757d;
            margin-bottom: 4px;
        }
        
        .service-total-amount {
            font-size: 20px;
            font-weight: 700;
            color: #ec4899;
        }
        
        .service-total-duration {
            font-size: 12px;
            color: #6c757d;
            margin-top: 4px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <div class="header-logo">
                <img src="~/images/logo3.png" alt="GlowNic Logo" />
            </div>
            <div class="header-info">
                <div class="barber-name">@(barber?.Name ?? "Sal√≥n")</div>
                @if (!string.IsNullOrEmpty(barber?.BusinessName))
                {
                    <div class="barber-business">@barber.BusinessName</div>
                }
                @if (!string.IsNullOrEmpty(barber?.Phone))
                {
                    <div class="barber-phone">
                        <i class="fab fa-whatsapp"></i>
                        <span>@barber.Phone</span>
                    </div>
                }
            </div>
        </div>
        
        <!-- Selector de Fecha -->
        <div class="date-section">
            <div class="date-title">Selecciona una fecha</div>
            <div class="date-selector" id="dateSelector"></div>
        </div>
        
        <!-- Horarios Disponibles -->
        <div class="time-section">
            <div class="section-title">Horarios Disponibles</div>
            <div id="timeSlots" class="time-slots">
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Selecciona una fecha</p>
                </div>
            </div>
        </div>
        
        <!-- Formulario -->
        <div class="form-section">
            <form id="appointmentForm">
                <!-- Servicios (Opcional) -->
                @if (barber?.Services != null && barber.Services.Any(s => s.IsActive))
                {
                    <div class="form-group">
                        <label class="form-label">
                            Servicios <span class="optional">(Opcional)</span>
                        </label>
                        <div class="services-search">
                            <input type="text" id="serviceSearch" class="services-search-input" placeholder="üîç Buscar servicio...">
                        </div>
                        <div class="services-container" id="servicesContainer">
                            @foreach (var service in barber.Services.Where(s => s.IsActive))
                            {
                                <div class="service-card" data-service-id="@service.Id" data-service-price="@service.Price" data-service-duration="@service.DurationMinutes" data-service-name="@service.Name.ToLower()">
                                    <input type="checkbox" class="service-checkbox" id="service_@service.Id" value="@service.Id">
                                    <label for="service_@service.Id" class="service-info">
                                        <div class="service-name">@service.Name</div>
                                        <div class="service-details">
                                            <span class="service-price">C$@service.Price.ToString("N2")</span>
                                            <span>‚Ä¢</span>
                                            <span>@service.DurationMinutes min</span>
                                        </div>
                                    </label>
                                </div>
                            }
                        </div>
                        <div class="service-total" id="serviceTotal" style="display: none;">
                            <div class="service-total-label">Total</div>
                            <div class="service-total-amount" id="totalAmount">C$0.00</div>
                            <div class="service-total-duration" id="totalDuration">0 min</div>
                        </div>
                    </div>
                }
                
                <!-- Nombre -->
                <div class="form-group">
                    <label class="form-label">Tu Nombre</label>
                    <div class="input-wrapper">
                        <i class="fas fa-user input-icon"></i>
                        <input type="text" id="clientName" class="form-input" placeholder="Nombre completo" required>
                    </div>
                </div>
                
                <!-- WhatsApp -->
                <div class="form-group">
                    <label class="form-label">Tu WhatsApp</label>
                    <div class="input-wrapper">
                        <i class="fab fa-whatsapp input-icon whatsapp-icon"></i>
                        <input type="tel" id="clientPhone" class="form-input" placeholder="N√∫mero de WhatsApp" required>
                    </div>
                    <div class="form-help">
                        <i class="fab fa-whatsapp whatsapp-icon"></i>
                        <span>Te confirmo por WhatsApp</span>
                    </div>
                </div>
                
                <!-- Bot√≥n -->
                <button type="submit" id="submitBtn" class="btn-submit" disabled>
                    <span id="submitText">Agendar Cita</span>
                    <span id="submitLoading" style="display: none;">
                        <i class="fas fa-spinner fa-spin"></i>
                    </span>
                </button>
            </form>
        </div>
        
        <!-- Informaci√≥n (Opcional, colapsable) -->
        @if (barber?.WorkingHours != null && barber.WorkingHours.Any(wh => wh.IsActive))
        {
            <div class="info-section">
                <div class="section-title">Horarios de Atenci√≥n</div>
                @foreach (var wh in barber.WorkingHours.Where(wh => wh.IsActive).OrderBy(w => w.DayOfWeek == DayOfWeek.Sunday ? 7 : (int)w.DayOfWeek))
                {
                    <div class="info-item">
                        <div class="info-icon"><i class="fas fa-clock"></i></div>
                        <div class="info-text">
                            <div class="info-label">@GetDayName(wh.DayOfWeek)</div>
                            <div class="info-value">@wh.StartTime.ToString("HH:mm") - @wh.EndTime.ToString("HH:mm")</div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    
    <!-- Modal de √âxito -->
    <div id="successModal" class="modal">
        <div class="modal-content">
            <div class="modal-icon success">
                <i class="fas fa-check"></i>
            </div>
            <div class="modal-title">¬°Cita Agendada!</div>
            <div class="modal-message" id="successMessage">Tu cita ha sido agendada exitosamente.</div>
            <button onclick="AppointmentBooking.closeSuccessModal()" class="btn-submit">Cerrar</button>
        </div>
    </div>
    
    <!-- Modal de Error -->
    <div id="errorModal" class="modal">
        <div class="modal-content">
            <div class="modal-icon error">
                <i class="fas fa-times"></i>
            </div>
            <div class="modal-title">Error</div>
            <div class="modal-message" id="errorMessage">Ocurri√≥ un error al agendar la cita.</div>
            <button onclick="AppointmentBooking.closeErrorModal()" class="btn-submit">Cerrar</button>
        </div>
    </div>
    
    <!-- Scripts -->
    <script src="/js/appointment-booking.js"></script>
    <script>
        // Inicializar sistema de agendamiento
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof AppointmentBooking !== 'undefined') {
                AppointmentBooking.init('@slug');
            }
        });
    </script>
</body>
</html>

@functions {
    private string GetDayName(DayOfWeek dayOfWeek)
    {
        return dayOfWeek switch
        {
            DayOfWeek.Monday => "Lunes",
            DayOfWeek.Tuesday => "Martes",
            DayOfWeek.Wednesday => "Mi√©rcoles",
            DayOfWeek.Thursday => "Jueves",
            DayOfWeek.Friday => "Viernes",
            DayOfWeek.Saturday => "S√°bado",
            DayOfWeek.Sunday => "Domingo",
            _ => dayOfWeek.ToString()
        };
    }
}
